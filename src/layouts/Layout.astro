---
import '../styles/global.css';
import '../styles/chatAnimations.css';

interface Props {
  title?: string;
}

const { title = "Azure Foundry Agent Chat" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<header class="bg-white shadow-sm">
			<div class="container mx-auto px-4 py-4 flex items-center justify-between">
				<div class="flex items-center gap-2">
					<img src="/azure-logo.svg" alt="Azure Logo" class="w-8 h-8" />
					<h1 class="text-xl font-semibold text-gray-800">Azure Foundry Agent Chat</h1>
				</div>
				<nav>
					<ul class="flex gap-6">
						<li><a href="/" class="text-gray-700 hover:text-primary">Chat</a></li>
						<li><a href="/about" class="text-gray-700 hover:text-primary">About</a></li>
					</ul>
				</nav>
			</div>
		</header>
		<main class="container mx-auto px-4 py-8 flex-1">
			<slot />
		</main>
		<footer class="bg-gray-100 py-6">
			<div class="container mx-auto px-4 text-center text-gray-600">
				<p>&copy; 2025 Azure Foundry Agent Chat. All rights reserved.</p>
			</div>
		</footer>
	</body>
</html>
