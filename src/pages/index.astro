---
import Layout from '../layouts/Layout.astro';
import ChatInterface from '../components/ChatInterface';
---

<Layout title="Azure Foundry Agent Chat">
  <section class="max-w-4xl mx-auto">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Azure Foundry Agent Chat</h1>
      <p class="text-gray-600">Connect with Azure Foundry Agent services through this interactive chat interface.</p>
    </div>
    
    <div>
      <ChatInterface client:load />
    </div>
  </section>
</Layout>
